{
  "name": "deployment-pipeline-assignment",
  "version": "1.0.0",
  "description": "部署流水線作業範例專案 - A sample project for GitHub Actions deployment pipeline assignment",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "build": "npm run lint && npm run test && node scripts/build.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "preversion": "npm run test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "github-actions",
    "deployment",
    "ci-cd",
    "pipeline",
    "automation",
    "部署流水線",
    "自動化部署"
  ],
  "author": "Roger Tang",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RogerTangg/Deployment-Pipeline.git"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}